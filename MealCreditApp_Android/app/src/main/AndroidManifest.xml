<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beng.mealcreditapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="CP Meal Sharer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="" >
        </activity>
        <activity
            android:name=".settings"
            android:label="" />
        <activity
            android:name=".availability_dialog"
            android:label=""
            android:theme="@style/AppTheme.AvailabilityPopup" />
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup"
            android:parentActivityName=".login"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".EmailConfirm"
            android:parentActivityName=".signup"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>